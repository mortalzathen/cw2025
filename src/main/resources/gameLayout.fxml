<?import com.comp2042.ui.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.ui.GuiController"
      xmlns:fx="http://javafx.com/fxml">

    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40" styleClass="gamePanel"/>
        </center>
    </BorderPane>

    <GridPane fx:id="ghostPanel" hgap="0" vgap="0" layoutY="30" layoutX="40"/>

    <GridPane fx:id="brickPanel" vgap="1" hgap="1" layoutY="30" layoutX="40"/>

        <VBox layoutX="265.0" layoutY="100.0" alignment="TOP_CENTER" spacing="40" styleClass="vbox">

        <Label text="SCORE" styleClass="nextBrickLabel"/>
        <Label fx:id="scoreLabel" text="0" styleClass="scoreClass"/>

        <Label text="NEXT" styleClass="nextBrickLabel"/>

        <HBox alignment="CENTER" spacing="5.0">
            <GridPane fx:id="nextPanel1" hgap="1" vgap="1" styleClass="nextBrick"/>
            <GridPane fx:id="nextPanel2" hgap="1" vgap="1" styleClass="nextBrick"/>
            <GridPane fx:id="nextPanel3" hgap="1" vgap="1" styleClass="nextBrick"/>
        </HBox>
            <HBox alignment="CENTER" spacing="10.0">

                <Button
                        fx:id="pauseButton"
                        text="Pause"
                        onAction="#pauseGame"
                        styleClass="control-button"
                />

                <Button
                        fx:id="shadowButton"
                        text="Shadow: ON"
                        onAction="#toggleShadow"
                        styleClass="control-button"
                />
                <Button
                        fx:id="restartButton"
                        text="Restart"
                        onAction="#newGame"
                        styleClass="control-button"
                />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Button
                        fx:id="MenuButton"
                        text="Main Menu"
                        onAction="#gotoMenu"
                        styleClass="control-button"
                />
            </HBox>


    </VBox>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>