<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20" styleClass="rootStyle"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.comp2042.MenuController">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="TETRIS JFX" styleClass="scoreClass"/>

    <VBox spacing="10" alignment="CENTER" prefWidth="200">
        <Button text="START GAME" onAction="#startGame" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
        <Button text="LEADERBOARD" onAction="#showLeaderboard" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
        <Button text="EXIT" onAction="#exitGame" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
    </VBox>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</VBox>